<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" alignment="CENTER">
    <HBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Label>Sentence recognized:</Label>
        <TextArea fx:id="asrResult" editable="false"/>
        <Label>Corrected sentence:</Label>
        <TextArea fx:id="asrCorrected" editable="false"/>
    </HBox>
</GridPane>
