<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.text.Font?>
<HBox prefHeight="800.0" prefWidth="1280.0" xmlns:fx="http://javafx.com/fxml">
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="640.0">
        <AnchorPane>
            <ListView fx:id="corpusListView" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
        <AnchorPane>
            <ListView fx:id="arcticListView" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                      AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
    </SplitPane>
    <AnchorPane prefHeight="200.0" prefWidth="640.0">
        <Label alignment="CENTER" prefHeight="30.0" text="Sentence to pronounce:"
               AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
               AnchorPane.topAnchor="50.0"/>
        <Label fx:id="sentenceLabel" alignment="CENTER" textAlignment="CENTER" wrapText="true"
               prefHeight="100.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
               AnchorPane.topAnchor="90.0">
            <font>
                <Font name="System Bold" size="15.0"/>
            </font>
        </Label>
        <ProgressBar fx:id="leftProgressBar" prefHeight="30.0" prefWidth="200.0" progress="0.0"
                     rotate="-90.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="320.0"/>
        <ProgressBar fx:id="rightProgressBar" prefHeight="30.0" prefWidth="200.0" progress="0.0"
                     rotate="-90.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="320.0"/>
        <AnchorPane prefHeight="30.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                    AnchorPane.topAnchor="450.0">
            <Button fx:id="eraseButton" prefWidth="50.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0"/>
            <ToggleButton fx:id="recordToggleButton" prefWidth="50.0" AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="150.0" AnchorPane.topAnchor="0.0"/>
            <ToggleButton fx:id="playToggleButton" prefWidth="50.0" AnchorPane.bottomAnchor="0.0"
                          AnchorPane.leftAnchor="420.0" AnchorPane.topAnchor="0.0"/>
            <Button fx:id="saveButton" prefWidth="50.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </AnchorPane>
        <Button fx:id="backButton" prefHeight="30.0" prefWidth="60.0" text="back"
                AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="80.0"/>
        <Button fx:id="doneButton" prefHeight="30.0" prefWidth="60.0" text="done"
                AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
    </AnchorPane>
</HBox>
