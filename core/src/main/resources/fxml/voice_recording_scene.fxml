<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<GridPane hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml" alignment="CENTER">
    <HBox alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Label>Sentence to read:</Label>
        <TextArea fx:id="sentenceToRead" editable="false"/>
    </HBox>

    <HBox alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <Button fx:id="recordButton" text="record" onAction="#recordButtonClicked"/>
        <Button fx:id="recordDoneButton" text="save" onAction="#recordDoneButtonClicked"/>
    </HBox>

    <HBox alignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0">
        <Button fx:id="doneButton" text="done" onAction="#doneButtonClicked"/>
    </HBox>
</GridPane>